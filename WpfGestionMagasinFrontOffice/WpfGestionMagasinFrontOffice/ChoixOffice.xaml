<Window x:Class="WpfGestionMagasinFrontOffice.ChoixOffice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChoixOffice" Height="130" Width="350" Background="Lavender">
    <Grid>
        <Label Content="Choisissez votre office :" Height="28" HorizontalAlignment="Left" Name="titleLabel" VerticalAlignment="Top" Width="300"
               Foreground="BlueViolet" FontSize="16" FontWeight="DemiBold"/>
        <Button Content="FrontOffice" Height="23" HorizontalAlignment="Left" Margin="40,47,0,0"
                Name="button1" VerticalAlignment="Top" Width="75" Foreground="Gray" Background="WhiteSmoke" BorderThickness="0" Click="frontOfficeClick" />
        <Button Content="BackOffice" Height="23" HorizontalAlignment="Right" Margin="0,47,40,0" Name="button2" VerticalAlignment="Top" Width="75" 
                Foreground="Gray" Background="WhiteSmoke" BorderThickness="0" Click="backOfficeClick" />
    </Grid>
</Window>
